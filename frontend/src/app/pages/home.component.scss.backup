// Variables for the specific "Not Nice" look
$bg-color: #211f44; // Dark purple
$accent-color: #841171; // Magenta
$text-color: #ffffff;
$primary-gradient: linear-gradient(90deg, #841171 0%, #211f44 100%); // Magenta to Dark Purple
$secondary-gradient: linear-gradient(90deg, #211f44 0%, #841171 100%); // Dark Purple to Magenta
$font-family: 'Inter', sans-serif;

// 1. GLOBAL LAYOUT
:host {
  display: block;
  background-color: $bg-color;
  color: $text-color;
  font-family: $font-family;
  overflow-x: hidden;
}

.home {
  min-height: 100vh;
  width: 100%;
}

// 2. TOP BANNER
.banner {
  background: $primary-gradient;
  color: white;
  text-align: center;
  padding: 10px;
  font-size: 0.9rem;
  font-weight: 600;

  p {
    margin: 0;
  }
}


// 3. HERO SECTION (The Big Text)
.hero {
  height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: radial-gradient(circle at center, lighten(#211f44, 10%) 0%, $bg-color 70%);

  &__container {
    max-width: 1000px;
    padding: 0 20px;
  }

  &__headline {
    font-size: clamp(3rem, 8vw, 6rem);
    line-height: 1.1;
    font-weight: 800;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.3em;
  }

  &__word {
    color: $text-color;

    // The "Hype" Gradient Text Magic
    &--accent {
      background: $primary-gradient;
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      -webkit-text-fill-color: transparent;
      display: inline-block;
    }
  }

  &__cta {
    display: inline-block;
    padding: 1rem 3rem;
    background: $primary-gradient;
    color: white;
    font-weight: 700;
    border-radius: 50px;
    text-decoration: none;
    font-size: 1.2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;

    &:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(132, 17, 113, 0.6);
    }
  }
}


// 4. BRAND LOGOS
.brands {
  padding: 4rem 0;

  &__row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
    opacity: 0.7;
  }

  &__logo {
    height: 40px;
    width: auto;
    filter: grayscale(100%) brightness(200%);
    transition: filter 0.3s;

    &:hover {
      filter: none;
    }
  }
}


// 5. VIDEO SHOWCASE (Vertical Grid)
.section-title {
  text-align: center;
  font-size: 3rem;
  margin-bottom: 3rem;
  font-weight: 700;
  color: $text-color;
}

.videos-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.video-card {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  aspect-ratio: 9/16;
  background: darken(#211f44, 5%);
  cursor: pointer;
  transition: transform 0.3s ease;

  &:hover {
    transform: translateY(-10px);
    z-index: 2;
  }

  &__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  &__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    opacity: 0;
    transition: opacity 0.3s;
  }

  &:hover &__overlay {
    opacity: 1;
  }

  &__title {
    font-weight: 600;
    font-size: 1.1rem;
    color: $text-color;
  }
}


// 6. FEATURES & STATS
.features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.feature {
  background: darken(#211f44, 5%);
  padding: 30px;
  border-radius: 16px;
  border: 1px solid rgba(132, 17, 113, 0.3);

  &__number {
    font-size: 4rem;
    font-weight: 800;
    color: rgba(132, 17, 113, 0.4);
    line-height: 1;
    margin-bottom: 1rem;
  }

  &__title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: $text-color;
    font-weight: 600;
  }

  &__description {
    color: #aaa;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  &__cta {
    color: $accent-color;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;

    &:hover {
      color: #fff;
    }
  }
}

.stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 6rem;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 20px;

  &__number {
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 700;
    background: $primary-gradient;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  &__label {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 1rem;
  }

  &__quote {
    font-size: 1.5rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1.5rem;
  }

  &__author {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    strong {
      font-size: 1rem;
      color: #fff;
    }

    span {
      font-size: 0.95rem;
      color: rgba(255, 255, 255, 0.6);
    }
  }

  @media (max-width: 768px) {
    grid-template-columns: 1fr;
    gap: 4rem;
  }
}


.testimonial {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
  padding: 4rem 20px;

  &__quote {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 500;
    line-height: 1.5;
    color: #fff;
    margin: 0 0 2rem;
  }

  &__author {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;

    strong {
      font-size: 1.1rem;
      color: #fff;
    }

    span {
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.6);
    }
  }
}

.brand-trust {
  text-align: center;
  padding: 3rem 20px;

  &__title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #fff;
    margin: 0 0 2rem;
  }
}



// 7. FAQ ACCORDION
.faq {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 20px;

  &__item {
    border-bottom: 1px solid rgba(132, 17, 113, 0.3);
    margin-bottom: 1rem;
  }

  &__question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: none;
    border: none;
    color: white;
    padding: 1.5rem 0;
    font-size: 1.2rem;
    cursor: pointer;
    text-align: left;
    font-family: $font-family;

    &:hover {
      color: #ccc;
    }
  }

  &__answer {
    padding-bottom: 1.5rem;
    color: #aaa;
    line-height: 1.6;

    p {
      margin: 0;
    }
  }

  &__icon {
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  &__item--open &__icon {
    transform: rotate(180deg);
  }
}


// 8. FINAL CTA
.final-cta {
  text-align: center;
  padding: 5rem 20px;
  background: radial-gradient(circle at center, lighten(#211f44, 10%) 0%, $bg-color 70%);

  &__title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 800;
    color: $text-color;
  }

  &__subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }

  &__buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
}

// Helper buttons
.btn {
  padding: 12px 28px;
  border-radius: 50px;
  font-weight: 600;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  font-size: 1rem;

  &--primary {
    background: $primary-gradient;
    color: white;
    border: none;

    &:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(247, 37, 133, 0.5);
    }
  }

  &--secondary {
    background: transparent;
    border: 2px solid #ffffff;
    color: white;

    &:hover {
      background: white;
      color: black;
    }
  }
}

// Responsive adjustments
@media (max-width: 768px) {
  .final-cta {
    &__title {
      font-size: 2.5rem;
    }

    &__buttons {
      flex-direction: column;
      align-items: center;

      .btn {
        width: 100%;
        max-width: 300px;
      }
    }
  }

  .hero {
    height: auto;
    min-height: 60vh;
    padding: 4rem 0;

    &__headline {
      font-size: clamp(2rem, 8vw, 3.5rem);
    }
  }

  .videos-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .features {
    grid-template-columns: 1fr;
  }
}
